<% include ../partials/header %>

<div class="container">
    <p class="breadcrumb"><a href="/">Home</a> > Characters</p>
    <header id="indexJumbo" class="jumbotron">
                <div class="container">
                <h1 class="logo"><i class="fa fa-sun-o fa-1g" aria-hidden="true"></i> DAYBREAK</h1>
                <p>DAYBREAK RPG Character Manager</p>
                <br>
            <p>
                <a class="btn btn-primary btn-lg" href="/characters/new">Add New Character</a>
            </p>   
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Your Characters</h3>
        </div>
    </div>
    
        <div class="row text-center">
            <% character.forEach((character) => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <% if(character.role === 'Warrior') { %>
                                <img src="https://vignette.wikia.nocookie.net/wowwiki/images/e/ee/Warrior_crest.png/revision/latest?cb=20130813095500">
                       <% } else if (character.role === 'Mage') { %>
                               <img src="https://vignette.wikia.nocookie.net/wowwiki/images/b/b8/Mage_crest.png/revision/latest?cb=20130813094952">
                          <% } else if (character.role === 'Rogue') { %>
                                <img src="https://vignette.wikia.nocookie.net/wowwiki/images/e/e2/Rogue_crest.png/revision/latest?cb=20130813095139">
                          <% } else if (character.role === 'Priest') { %>
                                <img src="https://vignette.wikia.nocookie.net/wowwiki/images/7/71/Priest_crest.png/revision/latest?cb=20130813095106">
                          <% } else if (character.role === 'Ranger') { %>
                                <img src="https://vignette.wikia.nocookie.net/wowwiki/images/2/20/Hunter_crest.png/revision/latest?cb=20130813094921">
                            <% } %>
                        
                       <div class="caption">
                           <h3><%= character.name.toUpperCase() %></h3>
                           <p><%= character.level %> <%= character.race %> <%= character.role %></p>
                               <% if(character.guild === "Guildless") { %>
                                   <p id='red'>Guildless</p>
                             <%  } else { %>
                               <p id="red">< <%= character.guild %> ></p>
                            <% } %>
                        </div>
                        <p>
                            <a href="characters/c/<%= character._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    

<% include ../partials/footer %>
