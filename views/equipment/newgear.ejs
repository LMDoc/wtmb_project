<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="jumbotron" style="margin: 120px auto">
        <h2 style="text-align: center">Create a New Character</h2>
            <form action="/equipment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Item Name" minlength="3" maxlength="20" required>
                </div>
                 <div class="form-group">
                    <select class="form-control" name="slot">
                        <option value="Weapon">Weapon</option>
                        <option value="Off-Hand">Off-Hand</option>
                        <option value="Neck">Neck</option>
                        <option value="Cloak">Cloak</option>
                        <option value="Head">Head</option>
                        <option value="Chest">Chest</option>
                        <option value="Legs">Legs</option>
                        <option value="Arms">Arms</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="quality">
                        <option value="Common">Common</option>
                        <option value="Rare">Rare</option>
                        <option value="Legendary">Legendary</option>
                        <option value="Exotic">Exotic</option>
                    </select>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="power" placeholder="Power Level" min="1" max="1000" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="level" placeholder="Item Level (1 - 20)" min="1" max="20">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                    <a href="/equipment">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>